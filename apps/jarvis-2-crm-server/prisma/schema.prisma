datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Deal {
  assignedTo String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  manager    String?
  updatedAt  DateTime @updatedAt
}

model Company {
  assignedTo String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  manager    String?
  updatedAt  DateTime @updatedAt
}

model Invoice {
  assignedTo String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  manager    String?
  updatedAt  DateTime @updatedAt
}

model Contact {
  assignedTo String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  manager    String?
  updatedAt  DateTime @updatedAt
}

model Product {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Quote {
  assignedTo String?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  manager    String?
  updatedAt  DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
